<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studymavernspringboot.mybatisapp.category.CategoryMybatisMapper">

    <insert id="insert" parameterType="CategoryDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category_tbl
            ( name )
        VALUES ( #{name} )

    </insert>

    <update id="update" parameterType="CategoryDto">
        UPDATE category_tbl
        SET name=#{name}
        WHERE id=#{id}

    </update>

    <delete id="deleteById">

        DELETE FROM category_tbl
        WHERE id=#{id}

    </delete>

    <select id="findById" resultType="com.studymavernspringboot.mybatisapp.category.CategoryDto">
        SELECT
            id, name
        FROM category_tbl
        WHERE id=#{id}

    </select>


</mapper>